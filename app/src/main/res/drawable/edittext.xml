<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"
        android:state_enabled="true">
        <shape>
            <solid
                android:color="#73000000" />

            <stroke
                android:width="2dip"
                android:color="#ffffff" />

            <corners
                android:radius="3dip" />

            <padding
                android:left="30dip"
                android:right="7dip" />
        </shape>
    </item>
    <item android:state_focused="true"
        android:state_enabled="true">
        <shape>
            <solid
                android:color="#73000000" />

            <stroke
                android:width="2dip"
                android:color="#ffffff" />

            <corners
                android:radius="3dip" />

            <padding
                android:left="30dip"
                android:right="7dip" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="#73000000" />

            <stroke
                android:width="1dp"
                android:color="#aeaeae" />

            <corners
                android:radius="3dip" />

            <padding
                android:left="30dip"
                android:right="7dip" />
        </shape>
    </item>

</selector>