<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ItemListChatMe_RelativeLayout_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="2dp"
    android:background="#00ffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:gravity="left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:id="@+id/ItemListChatMe_TextView_readCount"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="10sp"
                android:visibility="gone"
                android:textColor="#fff16e"/>

            <TextView
                android:id="@+id/ItemListChatMe_TextView_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="2018101010"
                android:textColor="#bebebe"/>



        </LinearLayout>

        <TextView
            android:id="@+id/ItemListChatMe_TextView_message"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_gravity="right"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/bubble_status"/>

    </LinearLayout>

</LinearLayout>