<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/UsersFragment_FrameLayout_mainView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.UsersFragment"
    android:background="@color/backgroundColor"
    android:theme="@style/DevFragText"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/UsersFragment_FrameLayout_searchLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/search"
        android:visibility="gone"
        android:elevation="15dp">

        <EditText
            android:id="@+id/UsersFragment_EditText_txtSearch"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginHorizontal="40dp"
            android:textSize="14sp"
            android:textColor="@color/backgroundColor"
            android:fontFamily="sans-serif"
            android:background="@null"
            android:hint="친구 이름 검색"/>

        <Button
            android:id="@+id/UsersFragment_Button_btnSearch"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:background="@drawable/icon_search"/>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/UsersFragment_RecyclerView_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/UsersFragment_FloatingActionMenu_newFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            app:menu_backgroundColor="#00ffffff"
            app:menu_buttonSpacing="0dp"
            app:menu_fab_size="normal"
            app:menu_showShadow="true"
            app:menu_shadowColor="#000000"
            app:menu_shadowRadius="4dp"
            app:menu_shadowXOffset="1dp"
            app:menu_shadowYOffset="1dp"
            app:menu_animationDelayPerItem="50"
            app:menu_icon="@drawable/icon_newfriend"
            app:menu_colorNormal="#ffffff"
            app:menu_colorPressed="#c0c0d9"
            app:menu_colorRipple="#d1d1ea"
            app:menu_labels_cornerRadius="10dp"
            app:menu_labels_margin="5dp"
            app:menu_labels_textSize="14sp"
            app:menu_labels_ellipsize="none"
            app:menu_labels_maxLines="-1"
            app:menu_labels_singleLine="true"
            app:menu_labels_colorNormal="#00ffffff"
            app:menu_labels_colorPressed="#00ffffff"
            app:menu_labels_colorRipple="#00ffffff"
            app:menu_labels_showShadow="true"
            app:menu_openDirection="up">
            
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/UsersFragment_FloatingActionButton_findEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_size="mini"
                app:fab_label="Email"
                app:fab_colorNormal="#ffffff"
                app:fab_colorPressed="#c0c0d9"
                app:fab_colorRipple="#d1d1ea"
                app:fab_shadowColor="#000000"
                app:fab_shadowRadius="4dp"
                app:fab_shadowXOffset="1dp"
                app:fab_shadowYOffset="1dp"
                app:fab_showShadow="true"
                android:src="@drawable/icon_email"/>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/UsersFragment_FloatingActionButton_findPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_size="mini"
                app:fab_label="Phone"
                app:fab_colorNormal="#ffffff"
                app:fab_colorPressed="#c0c0d9"
                app:fab_colorRipple="#d1d1ea"
                app:fab_shadowColor="#000000"
                app:fab_shadowRadius="4dp"
                app:fab_shadowXOffset="1dp"
                app:fab_shadowYOffset="1dp"
                app:fab_showShadow="true"
                android:src="@drawable/icon_phone"/>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/UsersFragment_FloatingActionButton_findNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_size="mini"
                app:fab_label="NickName"
                app:fab_colorNormal="#ffffff"
                app:fab_colorPressed="#c0c0d9"
                app:fab_colorRipple="#d1d1ea"
                app:fab_shadowColor="#000000"
                app:fab_shadowRadius="4dp"
                app:fab_shadowXOffset="1dp"
                app:fab_shadowYOffset="1dp"
                app:fab_showShadow="true"
                android:src="@drawable/icon_alphabet"/>

        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>

</FrameLayout>