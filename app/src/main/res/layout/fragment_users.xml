<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/UsersFragment_FrameLayout_mainView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.UsersFragment"
    android:background="@color/backgroundColor"
    android:theme="@style/DevFragText">

    <FrameLayout
        android:id="@+id/UsersFragment_FrameLayout_searchLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/search"
        android:visibility="gone"
        android:elevation="15dp">

        <EditText
            android:id="@+id/UsersFragment_EditText_txtSearch"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginHorizontal="40dp"
            android:textSize="14sp"
            android:textColor="@color/backgroundColor"
            android:fontFamily="sans-serif"
            android:background="@null"
            android:hint="친구 이름 검색"/>

        <Button
            android:id="@+id/UsersFragment_Button_btnSearch"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"/>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/UsersFragment_RecyclerView_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</FrameLayout>