<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp">

    <ImageView
        android:id="@+id/ItemListAddFriend_ImageView_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/ItemListAddFriend_TextView_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/sans_thin"
        android:layout_toRightOf="@id/ItemListAddFriend_ImageView_profile"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/ItemListAddFriend_TextView_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sans_thin"
        android:text=" / "
        android:layout_toRightOf="@id/ItemListAddFriend_TextView_nickName"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/ItemListAddFriend_TextView_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sans_thin"
        android:layout_toRightOf="@id/ItemListAddFriend_TextView_line"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/ItemListAddFriend_Button_addFriend"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_add"
        android:elevation="5dp"/>

</RelativeLayout>