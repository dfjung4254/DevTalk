<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="#00ffffff">

        <ImageView
            android:id="@+id/ItemListListFriendMe_ImageView_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/ItemListListFriendMe_TextView_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/sans_light"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_toRightOf="@id/ItemListListFriendMe_ImageView_profile"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/ItemListListFriendMe_TextView_status"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingHorizontal="10dp"
            android:textSize="10sp"
            android:textColor="#000000"
            android:fontFamily="@font/sans_light"
            android:gravity="center"
            android:background="@drawable/bubble_status"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="#60606c"/>

    <TextView
        android:id="@+id/ItemListListFriendMe_TextView_friendCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="친구 (28)"
        android:textColor="#838394"
        android:textSize="12sp"/>

</LinearLayout>